@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="relative h-screen flex flex-col justify-center items-center bg-gray-900 text-white text-center bg-[url('/images/404.png')] bg-cover bg-center overflow-y-hidden">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black opacity-70"></div>

    <h1 class="text-4xl font-bold text-red-500 mb-4 z-10">Oops! Something went wrong.</h1>
    <h2 class="text-2xl text-white mb-6 z-10">@ViewBag.ErrorMessage</h2>

    @if (Model.ShowRequestId)
    {
        <p class="mb-4 z-10">
            <strong class="text-gray-400 max-lg:block max-lg:px-2">Reference ID:</strong>
            <code class="text-yellow-400 max-lg:block max-lg:px-2">@Model.RequestId</code>
        </p>
    }

    <a href="/" class="z-10 mt-6 px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white font-semibold rounded transition-all duration-400 ease-in transform hover:scale-105">
        Back to Home
    </a>
</div>
