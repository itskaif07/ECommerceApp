@model ECommerceApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="flex items-center justify-between px-10 mt-3">
    <a asp-controller="Products" asp-action="ProductDetails" asp-route-id="@Model.Product.Id" class="fixed left-6 top-6 bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md inline-block  py-1 w-24 flex items-center justify-center">
        <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
    </a>
</div>
<h2 class="text-xl font-semibold mt-4 text-center mb-10">Order Details</h2>

<div class="w-full h-full flex items-center justify-center flex-col">



    <form asp-action="OrderDetails" method="post" class="w-full h-full flex items-center justify-center">

        @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
        <input type="hidden" name="UserId" value="@Model.ApplicationUser?.Id">
        <input type="hidden" name="ProductId" value="@Model.Product?.Id">
        <input type="hidden" asp-for="DeliveryCharge">
        <input type="hidden" asp-for="DeliveryDate">


        <div class="w-[50%] fixed left-0 top-20 h-4/5 flex flex-col items-center justify-center space-y-6">
            <div class="w-full h-full flex items-center justify-center mt-3 relative overflow-hidden group cursor-crosshair">
                <img id="productImage" src="@(Model.Product.ImageUrl ?? Url.Content("~/images/noImage.jpg"))" class="w-[70%] h-full object-contain object-center transition-all duration-400 ease-out">
                <div class="absolute hidden w-32 h-32 bg-no-repeat border-2 border-yellow-400 pointer-events-none group-hover:block" id="zoomOverlay"></div>
            </div>
        </div>

        <div class="w-1/2"></div>


        <div class="w-1/2 h-full flex items-start flex-col justify-center space-y-6">
            <h1 class="text-xl font-medium">@Model.Product.Name</h1>

            <h5 class="pr-32">@Model.Product.Description</h5>

            <label for="Quantity" class="font-semibold text-left">Quantity:</label>

            <div class="flex items-center w-1/4">

                <!-- Reduce Quantity Button -->
                <button asp-action="ReductQuantity"
                        asp-controller="Orders"
                        asp-route-id="@Model?.OrderId"
                        method="post"
                        type="submit"
                        class="w-10 h-10 flex items-center justify-center text-xl bg-white text-black rounded-full hover:text-black">
                    -
                </button>

                <!-- Quantity Input Section -->
                <div class="flex flex-col items-center justify-center w-[40%] h-full space-y-2">
                    <input type="number" id="input" min="1" class="text-center w-16 h-10 text-xl text-black font-semibold bg-gray-100 rounded-lg border-2 outline-none" asp-for="Quantity">

                </div>

                <!-- Append Quantity Button -->
                <button asp-action="AppendQuantity"
                        asp-controller="Orders"
                        asp-route-id="@Model?.OrderId"
                        method="post"
                        type="submit"
                        class="w-10 h-10 flex items-center justify-center text-xl bg-white text-black rounded-full hover:text-black">
                    +
                </button>
            </div>

            

            @if (TempData["Notification"] != null)
            {
                <div id="notification">
                    @Html.Raw(@TempData["Notification"])
                </div>
            }

            <div class="flex flex-col items-start justify-center w-4/5 space-y-2">
                <label for="TotalPrice" class="font-semibold">Total Price:</label>
                <div class="flex items-center space-x-2 text-lg text-green-400 font-semibold">
                    <span>&#x20B9;</span>
                    <input type="text" id="TotalPrice" class="w-full bg-transparent outline-none ouline-none focus:outline-none" asp-for="TotalPrice" readonly>
                </div>
                <span asp-validation-for="TotalPrice" class="text-red-400"></span>
            </div>

            @if (TempData["Error"] != null)
            {
                <p class="text-red-500">@TempData["Error"]</p>
            }

            <div class="w-full h-full flex flex-col items-start justify-center space-y-2">
                @if (Model.DeliveryCharge > 0)
                {
                    <div class="flex items-center justify-center space-x-2">
                        <img src="~/images/delivery.png" class="w-6 invert grayscale">
                        <h1><span class="text-green-400">₹ @Model.DeliveryCharge</span> Delivery charges applicable</h1>
                    </div>
                    <p>Will be Delivered on: <span class="font-medium text-green-400">@(Model.DeliveryDate?.ToString("dd-MM-yyyy hh:mm tt") ?? "Delivery date not available")</span></p>

                }
                else
                {
                    <div class="flex items-center justify-center space-x-2">
                        <img src="~/images/delivery.png" class="w-6 invert grayscale">
                        <h1><span class="text-green-400">Free Home Delivery</span></h1>
                    </div>
                    <p>Will be Delivered on: <span class="font-medium text-green-400">@(Model.DeliveryDate?.ToString("dd-MM-yyyy hh:mm tt") ?? "Delivery date not available")</span></p>

                }
            </div>


            <div class="flex flex-col items-start justify-center w-4/5 space-y-2">
                <label for="ShippingAddress" class="font-semibold">Shipping Address:</label>
                <input type="text" id="ShippingAddress" class="w-full text-lg text-black font-semibold bg-gray-100 rounded-lg pl-2 border-2 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" asp-for="ShippingAddress">
                <span asp-validation-for="ShippingAddress" class="text-red-400"></span>
            </div>

            <div class="flex flex-col items-start justify-center w-4/5 space-y-2">
                <label for="TrackingNumber" class="font-semibold">Your order will be shipped with the tracking number:</label>
                <input type="text" id="TrackingNumber" class="w-full text-yellow-400 bg-transparent bg-transparent outline-none ouline-none focus:outline-none" asp-for="TrackingNumber" readonly>
                <span asp-validation-for="TrackingNumber" class="text-red-400"></span>
            </div>

            <div class="flex flex-col items-start justify-center w-[40%] space-y-2">
                <label>Payment Method:</label>
                <select asp-for="PaymentMethod" class="py-2 w-full rounded-lg px-2 cursor-pointer text-black">
                    <option value="">Select Payment Method</option>
                    <option value="CashOnDelivery">Cash On Delivery</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                    <option value="PayPal">PayPal</option>
                    <option value="Net Banking">Net Banking</option>
                </select>

                <span asp-validation-for="PaymentMethod" class="text-red-400"></span>
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-500 transition-all duration-200 ease-in w-1/4 py-3">Confirm Order</button>
        </div>

    </form>
</div>


@section Scripts {
    <script src="~/js/orderDetails.js"></script>
}
