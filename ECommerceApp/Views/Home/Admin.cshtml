@{
    ViewData["Title"] = "Admin";
}

<div class="flex items-center justify-between w-full px-6 my-14 ">

<a asp-controller="Home" asp-action="Index" class="bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md  py-1 w-24 flex items-center justify-center">
    <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
</a>

<h1 class="text-xl font-semibold text-center underline">Admin</h1>

<div class="w-1/5 lg:w-[10%]"></div>
</div>

<div class="w-full flex items-center justify-center text-black flex-col flex-wrap space-y-14">

    <div class="w-full flex items-center justify-center flex-col lg:flex-row lg:space-x-6 space-y-6  lg:space-y-0">

        <a asp-controller="Categories" asp-action="CategoryAdd" class="lg:w-fit w-4/5 hover:text-white bg-yellow-500 hover:bg-yellow-600 py-3 px-8   transition-all duration-200 ease-in">
            Add Categories
        </a>


        <a asp-controller="Products" asp-action="ProductAdd" class="hover:text-white lg:w-fit w-4/5 bg-yellow-500 hover:bg-yellow-600 py-3 px-8   transition-all duration-200 ease-in">
            Add Product
        </a>
    </div>

    <div class="w-full flex items-center text-white justify-center flex-col lg:flex-row lg:space-x-6 space-y-6 lg:space-y-0">

        <a asp-controller="Products" asp-action="AllProducts" class="lg:w-fit w-4/5 bg-red-600 hover:bg-red-700 py-3 px-8   hover:text-white transition-all duration-200 ease-in">
            Delete Product
        </a>

        <a asp-controller="Categories" asp-action="DeleteCategoryList" class="lg:w-fit w-4/5 bg-red-600 hover:bg-red-700 py-3 px-8   hover:text-white transition-all duration-200 ease-in">
            Delete Category
        </a>

        <a asp-controller="Profiles" asp-action="AllProfiles" asp-route-mode="AssignAdmin" class="lg:w-fit w-4/5 bg-red-600 hover:bg-red-700 py-3 px-8   hover:text-white transition-all duration-200 ease-in">
            Assign Admin
        </a>

    </div>

    <div class="w-full flex items-center justify-center  flex-col lg:flex-row lg:space-x-6 space-y-6 lg:space-y-0">

        <a asp-controller="Products" asp-action="AllProducts" class="lg:w-fit w-4/5 hover:text-white bg-green-500 hover:bg-green-600 py-3 px-8   transition-all duration-200 ease-in">
            Products List
        </a>


        <a asp-controller="Categories" asp-action="CategoryIndex" class="lg:w-fit w-4/5 hover:text-white bg-green-500 hover:bg-green-600 py-3 px-8   transition-all duration-200 ease-in">
            Categories List
        </a>

        <a asp-controller="Profiles" asp-action="AllProfiles" asp-route-mode="UsersList" class="lg:w-fit w-4/5 bg-green-500 hover:bg-green-600 hover:text-white py-3 px-8   transition-all duration-200 ease-in">
            Users List
        </a>

        <a asp-controller="Profiles" asp-action="AdminsList" class="lg:w-fit w-4/5 bg-green-500 hover:bg-green-600 hover:text-white py-3 px-8   transition-all duration-200 ease-in">
            Admins List
        </a>

    </div>


</div>

