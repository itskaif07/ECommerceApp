@model ECommerceApp.Models.ApplicationUser

<a asp-controller="Home" asp-action="Index" class="mt-4 ml-4 bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md inline-block  py-1 w-24 mt-6 ml-6 flex items-center justify-center">
    <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
</a>

<div class="flex items-center justify-center flex-col mt-24 space-y-6">

<h2 class="text-xl font-semibold">Confirm Account Deletion</h2>
<p class="font-medium">Are you sure you want to delete your account, @Model.UserName?</p>

<form asp-action="ProfileDeleteConfirmed" asp-controller="Profiles" method="post" class="w-full mx-auto flex items-center justify-center space-x-4">
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit" class="bg-red-500 hover:bg-red-600 rounded-lg w-1/4 py-2">Yes, Delete My Account</button>
        <a asp-action="ProfileIndex" asp-controller="Profiles" class="bg-gray-400 rounded-lg px-8 py-2 y text-black hover:text-black">Cancel</a>
</form>

</div>