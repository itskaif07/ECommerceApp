<div class="flex flex-col lg:flex-row items-center justify-between mt-10 mb-10 px-6">

    <!-- Back Button (Left aligned) -->
    <a asp-controller="Profiles" asp-action="AllProfiles"
       class="block bg-blue-400 hover:bg-blue-600 hover:text-white py-1 w-24 hidden lg:flex items-center justify-center">
        <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
    </a>

    <!-- Heading (Centered) -->
    <h1 class="font-semibold text-2xl mx-auto mb-4 lg:mb-0 lg:flex-grow text-center">Details</h1>

    <!-- Conditional Button (Right aligned for large screens, inline for small screens) -->
    @if (User.IsInRole("SiteOwner") && ViewBag.UserRole == "SiteOwner")
    {
        <a asp-controller="Profiles" asp-action="AssignUser" asp-route-id="@Model.Id"
           class="bg-blue-500 hover:bg-blue-600 w-fit px-4 py-2 text-center mt-4 lg:mt-0 lg:ml-auto hidden lg:flex items-center justify-center">Remove Admin</a>
    }
    else if (ViewBag.UserRole != "SiteOwner")
    {
        <a asp-controller="Profiles" asp-action="AssignAdmin" asp-route-id="@Model.Id"
           class="bg-red-500 hover:bg-red-600 w-fit px-4 py-2 text-center mt-4 lg:mt-0 lg:ml-auto hidden lg:flex items-center justify-center">Assign Admin</a>
    }

    <!-- Conditional Button (Below "Pin Code" for small screens) -->
    @if (User.IsInRole("SiteOwner") && ViewBag.UserRole == "SiteOwner")
    {
        <a asp-controller="Profiles" asp-action="AssignUser" asp-route-id="@Model.Id"
           class="bg-blue-500 hover:bg-blue-600 w-1/2 px-4 py-2 text-center lg:hidden">Remove Admin</a>
    }
    else if (ViewBag.UserRole != "SiteOwner")
    {
        <a asp-controller="Profiles" asp-action="AssignAdmin" asp-route-id="@Model.Id"
           class="bg-red-500 hover:bg-red-600 w-1/2 px-4 py-2 text-center lg:hidden">Assign Admin</a>
    }
</div>

<!-- Profile Details Section -->
<div class="w-full h-full flex items-center justify-center flex-col mx-auto space-y-10 max-[350px]:text-sm lg:text-xl pb-24 px-2">

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Role:</h1>
        <h1>@(ViewBag.UserRole ?? "User")</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Name:</h1>
        <h1>@Model.Name</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Username:</h1>
        <h1>@Model.UserName</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Email:</h1>
        <h1>@Model.Email</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Phone:</h1>
        <h1>@Model.PhoneNumber</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Address:</h1>
        <h1>@Model.Address</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>City:</h1>
        <h1>@Model.City</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>State:</h1>
        <h1>@Model.State</h1>
    </div>

    <div class="w-fit space-x-6 px-4 border border-[1px] py-2 flex items-center justify-between">
        <h1>Pin:</h1>
        <h1>@Model.PinCode</h1>
    </div>


</div>
