            <h3>Address:</h3>
            <h3 class="truncate text-base font-medium">@(Model.Address ?? "Not Provided")</h3>
        </div>

        <a class="block bg-gray-400 hover:bg-gray-500 transition-all duration-200 ease-in text-black border-[1px] border-black flex items-center justify-center rounded-md text-lg space-x-2 h-[60%] w-1/5">
            <h5>Edit</h5>
            <img src="~/images/edit.png" alt="Edit" class="w-4">
        </a>
    </div>


    <div class="flex items-center justify-between w-full border border-[1px] rounded-md px-6 h-20">
        <div class="text-lg space-y-1">
            <h3>City:</h3>
            <h3 class="text-base font-medium">@(Model.City ?? "Not Provided")</h3>
        </div>

        <a class="block bg-gray-400 hover:bg-gray-500 transition-all duration-200 ease-in text-black border-[1px] border-black flex items-center justify-center rounded-md text-lg space-x-2 h-[60%] w-1/5">
            <h5>Edit</h5>
            <img src="~/images/edit.png" alt="Edit" class="w-4">
        </a>
    </div>


    <div class="flex items-center justify-between w-full border border-[1px] rounded-md px-6 h-20">
