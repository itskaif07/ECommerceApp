@model ECommerceApp.Models.ApplicationUser

@{
    ViewData["Title"] = "User Profile";
}

<a asp-controller="Home" asp-action="Index" class="absolute left-2 -top-4 bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md inline-block  py-1 w-24 mt-6 ml-6 flex items-center justify-center">
    <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
</a>

<a asp-controller="Profiles" asp-action="ProfileDelete" asp-route-id="@Model.Id" class="absolute top-2 right-6 -top-4 bg-red-500 hover:bg-red-600  hover:text-white rounded-md inline-block  h-14 px-6 flex items-center justify-center">
    Delete Account
</a>


<h2 class="text-center mt-10 mb-6 font-semibold text-xl">Your Profile</h2>

<div class="flex items-center justify-center flex-col space-y-2 w-1/2 mx-auto">

    <div class="flex items-center justify-between w-full border border-[1px] rounded-md px-6 h-20">
        <div class="text-lg space-y-1">
            <h3>Name:</h3>
            <h3 class="text-base font-medium">@Model.Name</h3>
        </div>

          <a asp-controller="Profiles" asp-action="ProfileEdit" asp-route-id="@Model.Id" class="block cursor-pointer bg-gray-400 hover:bg-gray-500 transition-all duration-200 ease-in text-black border-[1px] border-black flex items-center justify-center rounded-md text-lg space-x-2 h-[60%] w-1/5">
              <h5>Edit</h5>
              <img src="~/images/edit.png" alt="Edit" class="w-4">
          </a>  
    </div>

    <div class="flex items-center justify-between w-full border border-[1px] rounded-md px-6 h-20">
        <div class="text-lg space-y-1">
            <h3>Username:</h3>
            <h3 class="text-base font-medium">@(Model.UserName ?? "Not Provided")</h3>
        </div>

        <a asp-controller="Profiles" asp-action="ProfileEdit" asp-route-id="@Model.Id" class="block cursor-pointer bg-gray-400 hover:bg-gray-500 transition-all duration-200 ease-in text-black border-[1px] border-black flex items-center justify-center rounded-md text-lg space-x-2 h-[60%] w-1/5">
              <h5>Edit</h5>
              <img src="~/images/edit.png" alt="Edit" class="w-4">
          </a>  
    </div>

