@model ECommerceApp.ViewModels.VerifyOtpViewModel;

@{
    ViewData["Title"] = "OTP Verification";
}


<form asp-action="VerifyOtp" method="post" class=" h-full w-full space-y-6 mt-44 flex items-center justify-center flex-col">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="w-full flex items-center justify-center flex-col space-y-2">
        <label class="font-medium">Enter OTP</label>
        <input type="number" asp-for="Otp" class="text-black w-1/4 outline-none pl-2">
        <span asp-validation-for="Otp" class="text-red-500"></span>
    </div>

    <p>An OTP has been sent to your email address.</p>

    <button type="submit" class="bg-blue-500 w-1/4 mx-auto py-2 hover:bg-blue-600 hover:scale-105 transition-all duration-400 ease-in">Verify OTP</button>
</form>


