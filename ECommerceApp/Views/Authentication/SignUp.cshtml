@model ECommerceApp.ViewModels.Authentication.SignUp;


@{
    ViewData["Title"] = "Sign Up";
}

<a asp-controller="Home" asp-action="Index" class="absolute left-2 -top-4 bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md inline-block py-2 px-10 mt-6 ml-6">Back</a>

<div class="flex items-center justify-center space-x-8 mt-2 mb-8">
    <a asp-controller="SignUp" asp-action="SignUp" id="registerButton" class="block hover:text-white transition-all duration-100 ease-out cursor-pointer">
        <h1 class="text-xl font-semibold tracking-wider">Register</h1>
        <div class="bg-white py-[2px] rounded-xl"></div>
    </a>

    <a asp-controller="LogIn" asp-action="LogIn" id="loginButton" class="block hover:text-white transition-all duration-100 ease-out cursor-pointer hover:opacity-70">
        <h1 class="text-xl font-semibold tracking-wider">Log In</h1>
        <div class="bg-white py-[2px] rounded-xl"></div>
    </a>
</div>


<form asp-action="SignUp" method="post" class="w-1/2 h-full py-10 mx-auto flex items-center flex-col justify-center space-y-6 mt-2 border-[1px] border-white rounded-xl">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-red-500" })

    <div class="w-32 h-32 rounded-full bg-white flex items-center justify-center">
        <img src="~/images/register.png" alt="Alternate Text" class="w-9/12">
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.Name" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="Name">
        <span asp-validation-for="@Model.UserName" class="text-red-500"></span>
    </div>


    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.UserName" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="Username">
        <span asp-validation-for="@Model.UserName" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.Email" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="Email">
        <span asp-validation-for="@Model.Email" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.Address" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="Address">
        <span asp-validation-for="@Model.Address" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.City" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="City">
        <span asp-validation-for="@Model.City" class="text-red-500"></span>
    </div>


    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.State" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="State">
        <span asp-validation-for="@Model.State" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <input asp-for="@Model.PinCode" class="w-full py-2 rounded-md text-black px-2 text-center" placeholder="Pin Code">
        <span asp-validation-for="@Model.PinCode" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <div class="relative w-full">
            <input asp-for="@Model.Password" id="password" class="w-full py-1 rounded-md text-black text-center px-2" type="password" placeholder="Password">
            <div class="flex items-center justify-center">
                <img src="~/images/icons8-eye-50.png" alt="Show" id="openEye" class="absolute right-2 top-0 w-8">
                <img src="~/images/icons8-closed-eye-50.png" alt="Show" id="closedEye" class="hidden absolute right-2 top-0 w-8">
            </div>
        </div>
        <span asp-validation-for="@Model.Password" class="text-red-500"></span>
    </div>

    <div class="flex items-center justify-center flex-col w-[70%] space-y-2">
        <div class="relative w-full">
            <input asp-for="@Model.ConfirmPassword" id="password1" class="w-full py-1 rounded-md text-black text-center px-2" type="password" placeholder="Confirm Password">
            <div class="flex items-center justify-center">
                <img src="~/images/icons8-eye-50.png" alt="Show" id="openEye1" class="absolute right-2 top-0 w-8">
                <img src="~/images/icons8-closed-eye-50.png" alt="Show" id="closedEye1" class="hidden absolute right-2 top-0 w-8">
            </div>
        </div>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-red-500"></span>
    </div>

    <button type="submit" class="btn btn-primary w-1/4">Register</button>
</form>

@section Scripts {
    <script src="~/js/signup.js"></script>
}


