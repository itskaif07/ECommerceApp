@model IEnumerable<ECommerceApp.Models.Category>

<a asp-controller="Home" asp-action="Admin" class="mt-4 ml-4 bg-blue-400 hover:bg-blue-600  hover:text-white rounded-md inline-block  py-1 w-24 mt-6 ml-6 flex items-center justify-center">
    <img src="~/images/back.png" alt="Back" class="invert grayscale w-8">
</a>

<div class="w-full flex items-center justify-center flex-col space-y-6 my-10">

    <h1 class="font-semibold text-xl">Delete Category</h1>

    <p class="text-center">Remember deleting a category will delete all the products related to it</p>


    @foreach (var i in Model)
    {
        <div class="flex items-center justify-between w-[90%] lg:w-1/3 border border-[1px] rounded-lg px-6 h-20">
            <div class="text-lg space-y-1">
                <h3>@i.Name</h3>
            </div>

            <a asp-controller="Categories" asp-action="CategoryDelete" asp-route-id="@i.Id" class="block cursor-pointer bg-red-500 hover:bg-red-600 hover:text-white transition-all duration-200 ease-in border-[1px] border-black flex items-center justify-center rounded-md text-lg space-x-2 h-[60%] lg:w-1/3 px-4">
                <h5>Delete</h5>
                <img src="~/images/icons8-delete-100.png" alt="Edit" class="w-4 invert grayscale">
            </a>
        </div>
    }
</div>